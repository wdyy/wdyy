<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_three_hdpi"
    tools:context=".movie.activity.FilmDetailsActivity">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:id="@+id/film_details_image_bg"
        />
    <ImageView
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_24"
        android:background="@mipmap/com_icon_movie_default"
        />

    <TextView
        android:textSize="@dimen/sp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_54"
        android:textColor="#fff"
        android:text="电影详情" />

    <ImageView
        android:id="@+id/film_details_image_gz"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_alignRight="@id/film_details_image_bg"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="26dp"
        android:background="@mipmap/com_icon_collection_default" />
    <TextView
        android:id="@+id/film_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="铁血战士"
        android:textSize="@dimen/sp_20"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_65"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/film_details_image"
        android:layout_width="@dimen/dp_259"
        android:layout_height="@dimen/dp_360"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_119"
        />
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@id/film_details_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_26"
        android:layout_marginRight="@dimen/dp_22"
        >
        <Button
            android:id="@+id/film_button_details"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_32"
            android:background="@drawable/details_but_bg"
            android:text="详情"
            android:textColor="#fff"
            />
        <Button
            android:id="@+id/film_button_notice"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_32"
            android:background="@drawable/details_but_bg"
            android:text="预告"
            android:layout_toRightOf="@id/film_button_details"
            android:layout_marginLeft="@dimen/dp_24"
            android:textColor="#fff"
            />
        <Button
            android:id="@+id/film_button_stills"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_32"
            android:background="@drawable/details_but_bg"
            android:text="剧照"
            android:layout_toRightOf="@id/film_button_notice"
            android:layout_marginLeft="@dimen/dp_24"
            android:textColor="#fff"
            />
        <Button
            android:id="@+id/film_button_comment"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_32"
            android:background="@drawable/details_but_bg"
            android:text="影评"
            android:layout_alignParentRight="true"
            android:textColor="#fff" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/details_buttom_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:id="@+id/film_button_return"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:background="@mipmap/icon_my_default"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_24"
            />

        <Button
            android:id="@+id/film_button_buy"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_24"
            android:text="购票"
            android:textColor="#fff"
            android:textSize="@dimen/sp_17"
            android:background="@drawable/details_but_buy_bg"
            />

    </RelativeLayout>

</RelativeLayout>