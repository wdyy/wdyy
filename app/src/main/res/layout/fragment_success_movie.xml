<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_186"
                android:background="@mipmap/bg_two_hdpi"
                >
                <ImageView
                    android:id="@+id/movie_image_local"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@mipmap/com_icon_loc_white_default"
                    />
                <TextView
                    android:id="@+id/movie_text_local_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京"
                    android:layout_toRightOf="@id/movie_image_local"
                    android:textColor="#fff"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_alignBottom="@id/movie_image_local"
                    />
            </RelativeLayout>
            <recycler.coverflow.RecyclerCoverFlow
                android:id="@+id/success_movie_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:layout_marginTop="@dimen/dp_85"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sp_20"
            android:layout_marginLeft="@dimen/dp_24"
            >
            <TextView
                android:id="@+id/hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门电影"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                />
            <View
                android:id="@+id/view1"
                android:layout_below="@id/hot"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_centerVertical="true"
                android:background="@drawable/movie_item_text_shape"
                />
            <ImageView
                android:id="@+id/movie_image_next_hot"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_24"
                android:src="@mipmap/com_icon_next_default"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/movie_recycle_hot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_below="@id/movie_image_next_hot"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sp_20"
            android:layout_marginLeft="@dimen/dp_24"
            >
            <TextView
                android:id="@+id/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在热映"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                />
            <View
                android:id="@+id/view2"
                android:layout_below="@id/loading"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_centerVertical="true"
                android:background="@drawable/movie_item_text_shape"
                />
            <ImageView
                android:id="@+id/movie_image_next_loading"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_24"
                android:src="@mipmap/com_icon_next_default"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/movie_recycle_loading"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/movie_image_next_loading"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sp_20"
            android:layout_marginLeft="@dimen/dp_24"
            >
            <TextView
                android:id="@+id/will"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="即将上映"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                />
            <View
                android:id="@+id/view3"
                android:layout_below="@id/will"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_centerVertical="true"
                android:background="@drawable/movie_item_text_shape"
                />
            <ImageView
                android:id="@+id/movie_image_next_wait"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_24"
                android:src="@mipmap/com_icon_next_default"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/movie_recycle_wait"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_below="@id/movie_image_next_wait"
               />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>
