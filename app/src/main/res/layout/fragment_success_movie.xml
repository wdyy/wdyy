<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_186"
                android:background="@mipmap/bg_two_hdpi"
                >
                <ImageView
                    android:id="@+id/movie_image_local"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@mipmap/com_icon_loc_white_default"
                    />
                <TextView
                    android:id="@+id/movie_text_local_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京"
                    android:layout_toRightOf="@id/movie_image_local"
                    android:textColor="#fff"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_alignBottom="@id/movie_image_local"
                    />
                <LinearLayout
                    android:id="@+id/cinema_linearLayout_search"
                    android:layout_width="@dimen/dp_220"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/dp_m_193"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_24"
                    android:background="@drawable/shape_edit_search">

                    <ImageView
                        android:id="@+id/cinema_search_img"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:layout_marginTop="@dimen/dp_2"
                        android:src="@mipmap/com_icon_search_default"/>

                    <EditText
                        android:id="@+id/cinema_search_edit"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#333333"
                        android:hint="XX影院"
                        android:textColorHint="#fff"
                        android:background="@null"
                        />

                    <TextView
                        android:id="@+id/cinema_search_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="搜索"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_2"
                        android:textColor="#fff"/>
                </LinearLayout>
            </RelativeLayout>
            <recycler.coverflow.RecyclerCoverFlow
                android:id="@+id/success_movie_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:layout_marginTop="@dimen/dp_85"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/parent_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_3"
            android:background="@drawable/bg_line_while"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/success_movie_banner"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24">
            <LinearLayout
                android:id="@+id/checked_layout"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_3"
                android:background="@drawable/bg_dividing_line_title"
                android:gravity="center"
                android:orientation="horizontal"
                ></LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sp_20"
            android:layout_marginLeft="@dimen/dp_24"
            >
            <TextView
                android:id="@+id/hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门电影"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                />
            <View
                android:id="@+id/view1"
                android:layout_below="@id/hot"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_centerVertical="true"
                android:background="@drawable/movie_item_text_shape"
                />
            <ImageView
                android:id="@+id/movie_image_next_hot"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_24"
                android:src="@mipmap/com_icon_next_default"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/movie_recycle_hot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_below="@id/movie_image_next_hot"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sp_20"
            android:layout_marginLeft="@dimen/dp_24"
            >
            <TextView
                android:id="@+id/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在热映"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                />
            <View
                android:id="@+id/view2"
                android:layout_below="@id/loading"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_centerVertical="true"
                android:background="@drawable/movie_item_text_shape"
                />
            <ImageView
                android:id="@+id/movie_image_next_loading"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_24"
                android:src="@mipmap/com_icon_next_default"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/movie_recycle_loading"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/movie_image_next_loading"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sp_20"
            android:layout_marginLeft="@dimen/dp_24"
            >
            <TextView
                android:id="@+id/will"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="即将上映"
                android:textSize="@dimen/sp_16"
                android:textColor="#333333"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                />
            <View
                android:id="@+id/view3"
                android:layout_below="@id/will"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_centerVertical="true"
                android:background="@drawable/movie_item_text_shape"
                />
            <ImageView
                android:id="@+id/movie_image_next_wait"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_24"
                android:src="@mipmap/com_icon_next_default"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/movie_recycle_wait"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_below="@id/movie_image_next_wait"
               />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>
