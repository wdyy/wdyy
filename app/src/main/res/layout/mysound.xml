<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_20">

    <TextView
        android:id="@+id/soundtext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="111111111111111"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/soundtext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/soundtext1"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="111111111111111"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/soundtext3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="111111111111111"
        android:textColor="#333333" />

    <RadioButton
        android:id="@+id/soundtext4"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_below="@id/soundtext3"
        android:layout_alignParentRight="true"
        android:background="@drawable/attenrutton1"
        android:button="@null"
        android:checked="true"
        android:focusable="true"
        android:gravity="center"
        android:textColor="@drawable/cinema_text_color"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_15"
        android:background="#000" />
</RelativeLayout>
