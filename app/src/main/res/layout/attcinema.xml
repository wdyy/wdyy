<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_19"
    android:layout_marginLeft="@dimen/dp_17"
    android:layout_marginRight="@dimen/dp_17"
    android:background="@drawable/yuangkuang"
    android:padding="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/attcinemasimple"
            android:layout_width="@dimen/dp_107"
            android:layout_height="@dimen/dp_139" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_5"
            android:orientation="vertical">
            <TextView
                android:id="@+id/attcinematext1"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_22" />
            <TextView
                android:id="@+id/attcinematext2"
                android:textColor="#000"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_height="@dimen/dp_60" />
            <TextView
                android:id="@+id/attcinematext3"
                android:textColor="#000"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/attCinemaImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/pay_icon_weixin_default_hdpi"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
