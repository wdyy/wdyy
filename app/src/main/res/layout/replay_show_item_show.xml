<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/replay_image"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20"
        app:roundAsCircle="true"
        />
    <TextView
        android:id="@+id/replay_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111"
        android:textSize="@dimen/sp_14"
        android:textColor="#333333"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toRightOf="@id/replay_image"
        android:layout_alignBottom="@id/replay_image"
        />
    <TextView
        android:id="@+id/replay_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="#333333"
        android:layout_below="@id/replay_image"
        android:layout_marginTop="@dimen/dp_12"
        />
    <TextView
        android:id="@+id/replay_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="#999999"
        android:text="1111"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/replay_message"
        />

</RelativeLayout>
