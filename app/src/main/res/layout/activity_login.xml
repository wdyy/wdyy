<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bitmap"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_40"
    android:paddingRight="@dimen/dp_40">


    <EditText
        android:id="@+id/login_edit_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_130"
        android:background="@null"
        android:drawableLeft="@mipmap/log_icon_phone_default"
        android:drawablePadding="@dimen/dp_20"
        android:hint="手机号"
        android:paddingLeft="@dimen/dp_10"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textCursorDrawable="@drawable/shape_cursor_color"
        android:textSize="@dimen/sp_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/login_edit_pwd"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@mipmap/log_icon_lock_default"
            android:drawablePadding="@dimen/dp_20"
            android:hint="登录密码"
            android:paddingLeft="@dimen/dp_10"
            android:password="true"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textCursorDrawable="@drawable/shape_cursor_color"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/login_img_show"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/log_icon_eye_default" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/login_checkbox_rememberPwd"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:theme="@style/MyCheckBox" />

        <TextView
            android:id="@+id/login_text_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="记住密码"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="@dimen/sp_14" />

        <CheckBox
            android:id="@+id/login_checkbox_autoLogin"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_10"
            android:theme="@style/MyCheckBox" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:text="自动登录"
            android:textColor="#fff"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/login_text_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="快速注册"
            android:textColor="#fff"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <Button
        android:id="@+id/login_btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_130"
        android:background="@drawable/shape_login_btn"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="@dimen/sp_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_1"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_35"
            android:background="#FFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_3"
            android:gravity="center"
            android:text="第三方账号快速登录"
            android:textColor="#FFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_1"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp_35"
            android:background="#FFF" />
    </LinearLayout>

    <ImageView
        android:id="@+id/login_img_dsf"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/sp_16"
        android:src="@mipmap/log_icon_weixin_default" />


</LinearLayout>
