<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bitmap"
    android:paddingLeft="@dimen/dp_40"
    android:paddingRight="@dimen/dp_40"
    android:orientation="vertical">


    <EditText
        android:id="@+id/login_edit_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_130"
        android:hint="手机号"
        android:drawableLeft="@mipmap/log_icon_phone_default"
        android:drawablePadding="@dimen/dp_20"
        android:textSize="@dimen/sp_18"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:paddingLeft="@dimen/dp_10"
        android:background="@null"
        android:textCursorDrawable="@drawable/shape_cursor_color"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_30">

        <EditText
            android:id="@+id/login_edit_pwd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_30"
            android:hint="登录密码"
            android:password="true"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:drawableLeft="@mipmap/log_icon_lock_default"
            android:drawablePadding="@dimen/dp_20"
            android:textSize="@dimen/sp_18"
            android:paddingLeft="@dimen/dp_10"
            android:background="@null"
            android:textCursorDrawable="@drawable/shape_cursor_color"
            />

        <ImageView
            android:id="@+id/login_img_show"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/log_icon_eye_default"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/login_checkbox_rememberPwd"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:theme="@style/MyCheckBox"
            />

        <TextView
            android:id="@+id/login_text_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:textColorHint="#fff"
            android:textColor="#fff"/>

        <CheckBox
            android:id="@+id/login_checkbox_autoLogin"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:theme="@style/MyCheckBox"
            android:layout_marginLeft="@dimen/dp_10"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动登录"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:textSize="@dimen/sp_14"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/login_text_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快速注册"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:textColor="#fff"/>

    </LinearLayout>

    <Button
        android:id="@+id/login_btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="登录"
        android:textSize="@dimen/sp_18"
        android:textColor="#fff"
        android:layout_marginTop="@dimen/dp_130"
        android:background="@drawable/shape_login_btn"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_40">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="@dimen/dp_1"
            android:background="#FFF"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="第三方账号快速登录"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_9"
            android:textColor="#FFF"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="@dimen/dp_1"
            android:background="#FFF"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/login_img_dsf"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/log_icon_weixin_default"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/sp_16"/>


</LinearLayout>
